{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "google",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "new-cap": "off",
    "max-len": "off",
    "comma-dangle": "off",
    "eol-last": "off",
    "comma-style": "off",
    "one-var": "off",
    "arrow-parens": [
      "warn",
      "as-needed"
    ]
  }
}